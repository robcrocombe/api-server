{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "mocha"
  ],
  "rules": {
    "arrow-parens": 0,
    "comma-dangle": 0,
    "no-plusplus": [2, {
      "allowForLoopAfterthoughts": true
    }],
    "no-unused-expressions": [2, {
      "allowTernary": true
    }],
    "max-len": 0,
    "strict": [2, "global"],
    "mocha/no-exclusive-tests": 2
  }
}
